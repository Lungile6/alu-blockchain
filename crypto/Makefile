# Compiler and Flags
CC = gcc
CFLAGS = -Wall -Wextra -Werror -pedantic -I.
LIBS = -lssl -lcrypto

# Archive tool
AR = ar
ARFLAGS = rcs

# Source files
SRC = sha256.c \
      ec_create.c \
      ec_to_pub.c \
      ec_from_pub.c \
      ec_save.c \
      ec_load.c \
      ec_sign.c \
      ec_verify.c

# Object files (Generated by replacing .c with .o)
OBJ = $(SRC:.c=.o)

# Library name
NAME = libhblk_crypto.a

# Default rule
all: $(NAME)

# Rule to create the static library
$(NAME): $(OBJ)
	$(AR) $(ARFLAGS) $(NAME) $(OBJ)

# Rule for object files
%.o: %.c hblk_crypto.h
	$(CC) $(CFLAGS) -c $< -o $@

# Clean rule to remove objects and the library
clean:
	rm -f $(OBJ) $(NAME)

# Rebuild rule
re: clean all

.PHONY: all clean re
